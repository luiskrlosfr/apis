<div class="container emp-profile">
    <div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="https://www.ecofcleaners.com/wp-content/uploads/2019/03/ecof-cleaners-cleaning-lady-Vancover-BC.jpg" class="rounded-circle w-75 h-75"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                      <%= "#{agent.first_name.titleize} #{agent.last_name.titleize}" %>
                    </h5>
                    <h6>
                      <%= agent.user_type.titleize %>
                    </h6>
                    <p class="proile-rating">RANKINGS : <span>8/10</span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Perfil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Contacto</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
              <button class="btn btn-primary">Agendar Cita</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work pt-4">
                  <p>Servicios</p>
                  <% if @user.abilities.empty? %>
                    <p class="text-muted">Aún no tiene servicios registrados</p>
                  <% else %>
                    <% @user.abilities.each do |ab| %>
                      <span class="badge badge-success"><%= ab.name %></span>
                    <% end %>
                  <% end %>
                  <% if @user == current_user %>
                    <%= link_to '+ Añadir Servicios', new_ability_path, class: 'btn btn-outline-info badge-pill mt-2' %>
                  <% end %>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" >
                      <div class="row">
                          <div class="col-md-4">
                            <label>Zona Laboral</label>
                          </div>
                          <div class="col-md-4">
                            <p><%= @user.region.nil? ? 'N/D' : @user.region.name.nil? %></p>
                          </div>
                          <div class="col-md-4">
                            <% if @user == current_user %>
                              <%= link_to 'Editar', edit_user_path(current_user), class: 'btn btn-info' %>
                            <% end %>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-4">
                            <label>Horario Laboral</label>
                          </div>
                          <div class="col-md-4">
                            <% if @user.work_hours.empty? %>
                              <span>N/D</span>
                            <% else %>
                              <% @user.work_hours.each do |wh| %>
                                <div class="row">
                                  <div class="col-md-6">
                                    <label><%= wh.day.name %></label>
                                  </div>
                                  <div class="col-md-6">
                                    <label><%= wh.simple_time.hour %></label>
                                  </div>
                                </div>
                              <% end %>
                            <% end %>
                          </div>
                          <div class="col-md-4">
                            <% if @user == current_user %>
                              <%= link_to 'Editar', availability_path, class: 'btn btn-info' %>
                            <% end %>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                              <label>Total Projects</label>
                          </div>
                          <div class="col-md-6">
                              <p>230</p>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                              <label>English Level</label>
                          </div>
                          <div class="col-md-6">
                              <p>Expert</p>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                              <label>Availability</label>
                          </div>
                          <div class="col-md-6">
                              <p>6 months</p>
                          </div>
                      </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Your Bio</label><br/>
                                <p>Your detail description</p>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                      <div class="row">
                          <div class="col-md-6">
                            <label>Email</label>
                          </div>
                          <div class="col-md-6">
                            <p><%= @user.email %></p>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                            <label>Teléfono</label>
                          </div>
                          <div class="col-md-6">
                            <p><%= @user.phone %></p>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                              <label>Profession</label>
                          </div>
                          <div class="col-md-6">
                              <p>Web Developer and Designer</p>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                          </div>
                          <div class="col-md-6">
                            <%= link_to "Editar Info", edit_user_path(current_user), class: 'btn btn-info' %>
                          </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>           
</div>