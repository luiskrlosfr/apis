
<div class="d-flex w-100 justify-content-center">
<% if appointment.persisted? %>
  <h2>Editar horario</h2>
<% else %>
  <h2>Añadir un horario</h2>
<% end %>
</div>

<div class="d-flex w-100 h-100 justify-content-center">
  <div class="w-50 h-50">
    <%= form_for(appointment) do |f| %>
      <div class="form-row mb-4">
        <div class="form-group col-md-6">
          <h4>Disponibilidad</h4>
          <%= f.select :availability_id, @availability, {}, {class: "form-control"} %>
        </div>
        <div class="form-group col-md-6">
          <h4>Fecha</h4>
          <%= f.date_field :schedule, autofocus: true %>
        </div>
      </div>

      <%= f.hidden_field :client_id, value: current_user.id %>

      <%= f.hidden_field :agent_id, value: @agent.id %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <h4>Dirección donde se realizará el servicio</h4>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.submit "Registrar", class: 'btn btn-primary mt-4' %>
        </div>
      </div>
    <% end %>
  </div>
</div>